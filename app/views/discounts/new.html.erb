<%= form_with url: "/merchant/#{@merchant.id}/discounts", method: :post, local: true do |form| %>
   <%= form.label :name %>
   <%= form.text_field :name %>
   <br>
   <br>
   <%= form.label :percentage_discount %>(ex: 15 = 15%):
   <%= form.number_field :percentage_discount, min: 5, max: 100 %>
   <br>
   <br>
   <%= form.label :quantity %>:
   <%= form.number_field :quantity, min: 1, max: 30 %>
   <br>
   <br>
   <%= form.hidden_field :merchant_id, value: @merchant.id %>
   <%= form.submit "Create Discount" %>
<% end %>
