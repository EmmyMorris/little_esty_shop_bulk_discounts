<h1><%= @merchant.name %> Discounts</h1>
<h3>Upcoming US Holidays</h3>
<hr>
<h3>Merchant: <%= @merchant.name %></h3><br>

<%= link_to "Create New Discount", "/merchant/#{@merchant.id}/discounts/new" %>
<br><br>
<h4>Discounts</h4>
<% @discounts.each do |discount| %>
<p>Discount Name: <%= link_to "#{discount.name}", "/discounts/#{discount.id}"  %></p>
<p>Discount Percentage: <%= discount.percentage_discount %> </p>
<p>Item Quantity: <%= discount.quantity %> </p>
<%= link_to "Delete Discount: #{discount.name}", "/merchant/#{@merchant.id}/discounts/#{discount.id}", method: :delete %>
<br><br><br>
<% end %>
